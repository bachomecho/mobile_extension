{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "es6",
    "esModuleInterop": false,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "classic"
  },
  "include": ["src/*.ts", "src/**/*.ts"]
}
